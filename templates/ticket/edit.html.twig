{% extends 'base.html.twig' %}
{% block body %}
	<main>
		<div class="main-top d-flex justify-content-between">
			<h3>Modification du ticket</h3>
			<a class="btn back-btn" href="{{path('app_tickets')}}">
				<i class="fa-solid fa-arrow-rotate-left"></i>
				Revenir sur la liste des tickets
			</a>
		</div>
		<div class="ticket-form d-flex justify-content-center m-auto">
			{{ form_start(form) }}

			<div class="form-group">
				{{ form_label(form.name) }}
				{{ form_widget(form.name) }}
				{{ form_errors(form.name) }}
			</div>
			<div class="form-group">
				{{ form_label(form.description) }}
				{{ form_widget(form.description) }}
				{{ form_errors(form.description) }}
			</div>
			<div class="form-group">
				{{ form_label(form.priority) }}
				{{ form_widget(form.priority) }}
				{{ form_errors(form.priority) }}
			</div>
			<div class="form-group">
				{{ form_row(form.Valider) }}
			</div>
		</div>
		{{ form_end(form) }}
	</div>
</main>{% endblock %}
